// backend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"] // <--- ADD THIS LINE
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}